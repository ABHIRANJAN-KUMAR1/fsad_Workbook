<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Bean with constructor + setter injection -->
    <bean id="courseReg" class="com.klu.model.CourseRegistration">
        <!-- Constructor injection with type & index to avoid ambiguity -->
        <constructor-arg index="0" type="int" value="101"/>
        <constructor-arg index="1" type="java.lang.String" value="Abhi"/>
        
        <!-- Setter injection -->
        <property name="courseName" value="FSAD"/>
        <property name="semester" value="4"/>
    </bean>

</beans>
